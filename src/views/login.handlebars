<h1>{{title}}</h1>

<form action="/api/sessions/login" method="post">
  <div>
    <div>
      <label for="email">Email:</label>
      <br />
      <input
        type="email"
        id="email"
        name="email"
        placeholder="juanperez@mail.com"
      />
    </div>
    <div>
      <label for="password">Password:</label>
      <br />
      <input type="password" id="password" name="password" placeholder="****" />
    </div>
    <br />
    <button type="submit">Ingresar</button>
  </div>
</form>

<!-- Botón para ingresar con GitHub -->
<form action="/api/sessions/github" method="get">
  <button type="submit">Ingresar con GitHub</button>
</form>

<p>¿No tienes cuenta? <a href="/register">Registrar</a></p>
<p>¿Olvidaste tu contraseña? <a href="/recupero">Recuperar</a></p>
